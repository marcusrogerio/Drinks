<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.masciulli.drinks"
    android:versionCode="3"
    android:versionName="0.1.2">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DrinksApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DrinkDetailActivity"
            android:theme="@style/AppTheme.TransparentFromDualPane" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_settings" />
        <activity
            android:name=".activity.LicensesActivity"
            android:label="@string/title_licenses" />
        <activity
            android:name=".activity.LiquorDetailActivity"
            android:theme="@style/AppTheme.TransparentFromDualPane" />
    </application>

</manifest>
