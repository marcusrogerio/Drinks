<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.masciulli.drinks"
    android:versionCode="15"
    android:versionName="1.0.2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DrinksApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <activity
            android:label="@string/app_name"
            android:theme="@style/MainActivityTheme"
            android:name=".activity.MainActivity"
            android:logo="@drawable/ic_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DrinkDetailActivity" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_settings" />
        <activity
            android:name=".activity.LicensesActivity"
            android:label="@string/title_licenses" />
        <activity
            android:name=".activity.LiquorDetailActivity"
            />
    </application>

</manifest>
